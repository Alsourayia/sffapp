<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/foreground_text_color"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:background="@color/foreground_text_color"
            android:paddingTop="10dp"
            android:text="العنوان"
            android:textAlignment="center"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p8009_txt_cntry"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_lov_req"
            android:hint="الدولة"
            android:paddingTop="7dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/p8009_txt_city"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_lov_req"
            android:hint="المدينة"
            android:paddingTop="7dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/p8009_txt_district"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_lov"
            android:hint="الحي"
            android:paddingTop="7dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/p8009_txt_address"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/required_item"
            android:ems="10"
            android:hint="العنوان"
            android:inputType="text"
            android:singleLine="false"
            android:textDirection="rtl" />

        <EditText
            android:id="@+id/p8009_txt_street"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/required_item"
            android:ems="10"
            android:hint="اسم الشارع"
            android:inputType="text"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textDirection="rtl" />

        <EditText
            android:id="@+id/p8009_txt_nearest_sign"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/required_item"
            android:ems="10"
            android:hint="أقرب معلم"
            android:inputType="text"
            android:singleLine="false"
            android:textDirection="rtl" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>