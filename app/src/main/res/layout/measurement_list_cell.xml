<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_"
        style="@style/label_trans_style"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="10dp"
        android:text="#"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_1"
        style="@style/label_trans_style"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:text="نوع الغرفة"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_" />

    <TextView
        android:id="@+id/lbl_2"
        style="@style/label_trans_style"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="10dp"
        android:text="النشاط"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_1" />

    <TextView
        android:id="@+id/lbl_3"
        style="@style/label_trans_style"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="10dp"
        android:text="الصنف"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_2" />

    <TextView
        android:id="@+id/lbl_4"
        style="@style/label_trans_style"
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="10dp"
        android:text="اللون"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_3" />

    <TextView
        android:id="@+id/mess_fragment_txt_room_no"
        style="@style/text_trans_style"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/lbl_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mess_fragment_txt_room_desc"
        style="@style/text_trans_style"
        android:layout_width="275dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/lbl_1"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_room_no" />

    <TextView
        android:id="@+id/mess_fragment_txt_mgrp_desc"
        style="@style/text_trans_style"
        android:layout_width="275dp"
        android:layout_height="40dp"

        android:layout_below="@+id/mess_fragment_txt_room_desc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/lbl_2"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_room_desc" />

    <TextView
        android:id="@+id/mess_fragment_txt_item_desc"
        style="@style/text_trans_style"
        android:layout_width="275dp"
        android:layout_height="40dp"

        android:layout_below="@+id/mess_fragment_txt_mgrp_desc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/lbl_3"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_mgrp_desc" />

    <TextView
        android:id="@+id/mess_fragment_txt_color_desc"
        style="@style/text_trans_style"
        android:layout_width="275dp"
        android:layout_height="40dp"

        android:layout_below="@+id/mess_fragment_txt_item_desc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/lbl_4"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_item_desc" />

    <TextView
        android:id="@+id/mess_fragment_txt_area_width_cell"
        style="@style/text_trans_style"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/mess_fragment_txt_color_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="152dp"
        android:background="@drawable/textview_background"
        android:hint="W"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_color_desc" />

    <TextView
        android:id="@+id/mess_fragment_txt_area_length_cell"
        style="@style/text_trans_style"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/mess_fragment_txt_color_desc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/textview_background"
        android:hint="L"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_color_desc" />

    <TextView
        android:id="@+id/txt_area"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_below="@+id/mess_fragment_txt_area_width_in_meter"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="112dp"
        android:layout_toEndOf="@+id/mess_fragment_txt_area_length_in_meter"
        android:background="@drawable/area_v2"
        android:paddingTop="90dp"
        android:text="Area"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mess_fragment_txt_area_length_cell"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_area_width_cell" />

    <TextView
        android:id="@+id/textView2"
        style="@style/label_trans_style"
        android:layout_width="130dp"
        android:layout_height="30dp"

        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:text="Frame Count : "
        android:textDirection="ltr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_area" />

    <EditText
        android:id="@+id/mess_fragment_txt_frameQnty_cell"
        style="@style/text_trans_style"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_area"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textView7"
        android:background="@drawable/textview_background"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/txt_area" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_area"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/mess_fragment_txt_frameQnty_cell"
        android:text="pcs  "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mess_fragment_txt_frameQnty_cell"
        app:layout_constraintTop_toBottomOf="@+id/txt_area" />

    <TextView
        android:id="@+id/textView4"
        style="@style/label_trans_style"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:text="Devider Count : "
        android:textDirection="ltr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/mess_fragment_txt_dividerQnty_cell"
        style="@style/text_trans_style"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@+id/mess_fragment_txt_frameQnty_cell"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textView4"
        android:background="@drawable/textview_background"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_frameQnty_cell" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/mess_fragment_txt_dividerQnty_cell"
        android:text="pcs  "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mess_fragment_txt_dividerQnty_cell"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        style="@style/label_trans_style"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Reducer Count : "
        android:textDirection="ltr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/mess_fragment_txt_reducerQnty_cell"
        style="@style/text_trans_style"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@+id/mess_fragment_txt_dividerQnty_cell"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/textView6"
        android:background="@drawable/textview_background"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/mess_fragment_txt_dividerQnty_cell" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView17"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/mess_fragment_txt_reducerQnty_cell"
        android:text="pcs  "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mess_fragment_txt_reducerQnty_cell"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</android.support.constraint.ConstraintLayout>