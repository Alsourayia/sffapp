<android.support.v7.widget.Toolbar xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sff_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" >

            <Button
                android:id="@+id/toolbar_btn_prev"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/toolbar_btn_prev"
                android:visibility="invisible" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" >
            <TextView
                android:id="@+id/toolbar_txt_title"
                android:visibility="visible"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp"
                android:paddingTop="10dp"
                android:text="Title"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textColor="@color/foreground_text_color"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp" >





            <Button
                android:id="@+id/toolbar_btn_next"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/toolbar_btn_next"
                android:visibility="invisible" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.Toolbar>




